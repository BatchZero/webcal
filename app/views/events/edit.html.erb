<h1>Edit Event</h1>

<p>Find me in app/views/events/edit.html.erb</p>

<div>

  <%= form_for [@calendar, @event] do |f| %>

    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label t('events.title') %>
    <%= f.text_field :title %>
    <br/>

    <%= f.label t('events.description') %>
    <%= f.text_field :description %>
    <br/>

    <%= f.label t('events.location') %>
    <%= f.text_field :location %>
    <br/>

    <%= f.label t('events.start_at') %>
    <%= f.text_field :starts_at %>
    <br/>

    <%= f.label t('events.end_at') %>
    <%= f.text_field :ends_at %>
    <br/>

    <%= f.submit t('events.update') %>

  <% end %>

</div>